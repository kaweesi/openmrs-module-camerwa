<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Beans to add to the current Application context definition -->
  
<beans>
	
    <bean id="camerwaUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    	<property name="mappings">
            <props>
	           <prop key="module/camerwa/camerwaLink.form">camerwaFormController</prop>
	           <prop key="module/camerwa/patientWithoutDrug.form">patientWithoutDrugController</prop>
	           <prop key="module/camerwa/patientList.form">patientListController</prop>
	           <prop key="module/camerwa/downloadController.form">patientExportController</prop>
	           <prop key="module/camerwa/createRegimen.form">createRegimen</prop>
	           <prop key="module/camerwa/deleteRegimen.form">deleteRegimen</prop>
	    	</props>
		</property>
    </bean>
    
   
    <bean parent="serviceContext">
		<property name="moduleService">
	   		<list>
				<value>org.openmrs.module.camerwa.service.CamerwaService</value> 
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.camerwa.impl.CamerwaServiceImpl">
							<property name="dataQualityDAO">
								<bean class="org.openmrs.module.camerwa.db.hibernate.HibernateCamerwaDAO">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
								</bean> 
							</property>	 
						</bean>
					</property>
					<property name="preInterceptors">
						<list>
							<ref bean="authorizationInterceptor"/>
						</list>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
		   </list>
		</property>
    </bean>
	
    <!-- Controllers -->
	
	
    <bean id="camerwaFormController" class="org.openmrs.module.camerwa.web.controller.CamerwaFormController">
		<property name="sessionFactory">
				<ref bean="sessionFactory" />
		</property>
    </bean>
    <bean id="patientWithoutDrugController" class="org.openmrs.module.camerwa.web.controller.PatientWithoutDrugController">
		<property name="sessionFactory">
				<ref bean="sessionFactory" />
		</property>
    </bean>
    <bean id="patientListController" class="org.openmrs.module.camerwa.web.controller.PatientList">
		<property name="sessionFactory">
				<ref bean="sessionFactory" />
		</property>
    </bean>
    <bean id="patientExportController" class="org.openmrs.module.camerwa.web.controller.DownloadController">
		<property name="sessionFactory">
				<ref bean="sessionFactory" />
		</property>
    </bean>
    <bean id="createRegimen" class="org.openmrs.module.camerwa.web.controller.CreateRegimenController">
		<property name="sessionFactory">
				<ref bean="sessionFactory" />
		</property>
    </bean>
    <bean id="deleteRegimen" class="org.openmrs.module.camerwa.web.controller.DeleteRegimenController">
		<property name="sessionFactory">
				<ref bean="sessionFactory" />
		</property>
    </bean>
	
    <!-- /Controllers -->
</beans>